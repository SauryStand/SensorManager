<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SensorActivity">

    <Button
        android:id="@+id/ClearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ClearText"
        android:textSize="11dp" />

    <Switch
        android:id="@+id/SwitchTextPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ClearText"
        android:layout_toRightOf="@id/ClearText" />

    <Button
        android:id="@+id/ClearFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ClearText"
        android:layout_toRightOf="@id/SwitchTextPrint"
        android:text="@string/ClearFile"
        android:textSize="11dp" />

    <Switch
        android:id="@+id/SwitchFilePrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ClearText"
        android:layout_toRightOf="@id/ClearFile" />

    <TextView
        android:id="@+id/sensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SwitchFilePrint"
        android:scrollbars="vertical"
        android:text="@string/sensor" />

</RelativeLayout>
